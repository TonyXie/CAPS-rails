<!DOCTYPE html>
  <head>
    <title>CAPS</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:400" rel="stylesheet"></link>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <div class="<%= key %> alert">
        <div class="container">
          <%= value %>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>